namespace executionGraphGUI.serialization;

//! Describing a node type.
table NodeTypeDescription {
    name: string (id:0); //!< The readable name of the node.
    type: string (id:1); //!< The unqiue RTTI name of the node.
}

//! Describing a socket type.
table SocketTypeDescription {
    name: string (id:0); //!< The readable name of the node.
    type: string (id:1); //!< The unqiue RTTI name of the node.
}

//! ======================================================================
//! Message "general/getAllGraphTypeDescriptions"
//! ======================================================================

//! Describing the request data 
//! -> empty data

//! Describing the response data
table GetAllGraphTypeDescriptionsResponse {
    id:string (id:0); //!< The unique id of this graph description.
    nodeTypeDescriptions:[NodeTypeDescription] (id:1); //!< Node descriptions
    socketTypeDescriptions:[SocketTypeDescription] (id:2); //!< Socket descriptions
}

//! ======================================================================