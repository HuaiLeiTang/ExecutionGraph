{
  "name": "execution-graph-gui",
  "productName": "ExecutionGraphGui",
  "version": "1.0.0",
  "description": "The execution graph native gui application based on electron.",
  "author": "Simon Spörri, Gabriel Nützi and GitHub",
  "repository": "https://github.com/gabyx/ExecutionGraph",
  "license": "MPL 2.0",
  "scripts": {
    "build-client": "cd .. && npm run build -- --output-path ./native-app/dist/client/apps/eg",
    "build-client-dev": "cd .. && npm run build-dev -- --output-path ./native-app/dist/client/apps/eg",
    "build-client-prod": "cd .. && npm run build-prod -- --output-path ./native-app/dist/client/apps/eg",
    "webpack": "electron-webpack main",
    "package": "electron-builder",
    "compile": "tsc && cp -r resources dist",
    "build-test": "rm -r dist ; npm run build-client && npm run compile",
    "start-electron": "electron ./dist/main/main.js",
    "build": "rm -r dist ; npm run build-client && npm run webpack",
    "build-prod": "rm -r dist ; npm run build-client-prod && npm run webpack",
    "build-package": "npm run build && npm run package",
    "build-prod-package": "npm run build-prod && npm run package"
  },
  "main": "src/main/main.ts",
  "devDependencies": {
    "@types/argparse": "^1.0.35",
    "@types/node": "^10.12.5",
    "@types/webpack": "^4.4.18",
    "electron": "^3.0.8",
    "electron-builder": "^20.34.0",
    "electron-webpack": "^2.4.0",
    "electron-webpack-ts": "^3.0.0",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "argparse": "^1.0.10"
  },
  "build": {
    "appId": "executionGraphGui",
    "productName": "ExecutionGraphGui",
    "copyright": "Copyright © 2018 ${author}",
    "mac": {
      "category": "com.${name}.app"
    },
    "directories": {
      "output": "build",
      "app": "."
    }
  },
  "electronWebpack": {
    "commonSourceDirectory": "./src/common",
    "title": true,
    "main": {
      "sourceDirectory": "./src/main"
    }
  }
}
